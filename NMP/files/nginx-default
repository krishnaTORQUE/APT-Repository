server {
    listen 80;

    root /var/www/html;
    index index.php index.html;

    server_name 127.0.0.1 localhost;

	location ~ /\.ht {
        deny all;
    }

    location / {
        try_files $uri $uri/ =404;
    }

    ## For Only PHP ##
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.2-fpm.sock;
    	include fastcgi_params;
    }

}
